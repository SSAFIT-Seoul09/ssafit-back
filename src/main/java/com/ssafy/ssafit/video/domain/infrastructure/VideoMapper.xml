    <!-- 조건 검색 (title, parts, views, categories) -->
    <select id="searchVideos" resultType="Video">
        SELECT id
            ,user_id
            ,title
            ,description
            ,part
            ,url
            ,created_at
            ,modified_at
        FROM videos
        WHERE 1 = 1
        <if test="title != null and title != ''">
            AND title LIKE CONCAT('%', #{title}, '%')
        </if>
        <if test="parts != null and parts.size() > 0">
            AND part IN
            <foreach collection="parts" item="p" open="(" separator="," close=")">
                #{p}
            </foreach>
        </if>
        <if test="categories != null and categories.size() > 0">
            AND category IN
            <foreach collection="categories" item="c" open="(" separator="," close=")">
                #{c}
            </foreach>
        </if>

        <if test="views != null and views == 1">
            ORDER BY views DESC
        </if>
    </select>


    <!-- 영상 정보 수정 -->
    <update id="updateVideo" parameterType="Video">
        UPDATE videos
        SET title = #{title}
            ,description = #{description}
            ,part = #{part}
            ,url = #{url}
            ,modified_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 영상 삭제 -->
    <delete id="deleteVideo" parameterType="long">
        DELETE
        FROM videos
        WHERE id = #{id}
    </delete>

